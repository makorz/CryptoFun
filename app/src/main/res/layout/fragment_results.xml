<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.orders.OrdersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_real_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="User real account balance (USDT):"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_real_number_balance"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="User test account balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"

            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Auto test account nr 1 balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance1"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Auto test account nr 2 balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance2"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Auto test account nr 3 balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance3"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Auto test account nr 4 balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance4"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_balance5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Auto test account nr 5 balance:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_test_number_balance5"
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_log_real_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:text="Last 7 days order logs:"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_log_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textSize="12sp"
                android:textAlignment="textStart" />

            </ScrollView>>

        </HorizontalScrollView>


    </LinearLayout>



</LinearLayout>