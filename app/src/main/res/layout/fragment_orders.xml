<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.orders.OrdersFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_real_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:text="Real/Test:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_isolated_crossed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:text="Isolated/Crossed:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_long_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Long/Short:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="11dp"
                    android:text="Symbol:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_amount_usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="11dp"
                    android:text="Amount of USDT:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_sl_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="11dp"
                    android:text="SL Percentage:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tp_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="11dp"
                    android:text="TP Percentage:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_margin_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="11dp"
                    android:text="Margin Amount:"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group_real_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Real" />

                    <RadioButton
                        android:id="@+id/rb_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_isolated_crossed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_isolated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Isolated" />

                    <RadioButton
                        android:id="@+id/rb_crossed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crossed" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_long_short"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_long"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Long" />

                    <RadioButton
                        android:id="@+id/rb_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Short" />
                </RadioGroup>

                <EditText
                    android:id="@+id/et_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:hint="Enter symbol (e.g. ETHUSDT)"
                    android:inputType="textCapWords"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_amount_usdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:hint="Enter USDT (full nr, e.g. 50)"
                    android:inputType="number"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_sl_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:hint="Enter SL % (full nr, e.g. 5)"
                    android:inputType="number"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_tp_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:hint="Enter TP % (full nr, e.g. 5)"
                    android:inputType="number"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:hint="Enter margin (full nr, e.g. 12)"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_space_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/orange_700"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Place Order"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progress_bar_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:indeterminate="false"
                android:max="100" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_space_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/orange_700"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:text="Current orders list (test and real):"
                android:textAlignment="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rw_currentOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>