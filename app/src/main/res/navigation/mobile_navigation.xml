<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_loading">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cryptofun.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_loading"
        android:name="com.example.cryptofun.ui.loading.LoadingFragment"
        android:label="Loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/clearBackStack"
            app:destination="@id/navigation_home"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_loading_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cryptofun.ui.orders.OrdersFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cryptofun.ui.results.ResultsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_results" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.cryptofun.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>